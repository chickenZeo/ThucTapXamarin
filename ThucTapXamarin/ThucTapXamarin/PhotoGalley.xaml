<?xml version="1.0" encoding="utf-8" ?>
<ContentPage BackgroundColor="Black" xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ThucTapXamarin.PhotoGalley">
    <AbsoluteLayout>
        <Image AbsoluteLayout.LayoutBounds="0,0.5"
               AbsoluteLayout.LayoutFlags="PositionProportional"
               Aspect="AspectFit"
               x:Name="images" />
        <ActivityIndicator Color="White" IsRunning="{Binding Source={x:Reference images}, Path=IsLoading}"
                           AbsoluteLayout.LayoutBounds="0.5,0.05"
                           AbsoluteLayout.LayoutFlags="PositionProportional" />
        <Button BackgroundColor="Black"
                ImageSource="left"
                FontSize="20"
                Clicked="OnBtnBackClicked"
                AbsoluteLayout.LayoutBounds="0.05,0.05,50,50"
                AbsoluteLayout.LayoutFlags="PositionProportional" />
        <Button BackgroundColor="Black"
                
                ImageSource="right"
                FontSize="20"
                Clicked="OnBtnNextClicked"
                AbsoluteLayout.LayoutBounds="0.95,0.05,50,50"
                AbsoluteLayout.LayoutFlags="PositionProportional" />
    </AbsoluteLayout>
</ContentPage>