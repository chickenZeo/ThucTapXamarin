<?xml version="1.0" encoding="utf-8" ?>
<ContentPage Title="Contacts" xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ThucTapXamarin.Exercise.ContactPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add" Clicked="OnAddBtn_Clicked"/>
    </ContentPage.ToolbarItems>
    <ListView x:Name="listview" ItemSelected="Onlistview_ItemSelected">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <Label Padding="15,0"
                           VerticalOptions="Center"
                           Text="{Binding FullName}" />
                    <ViewCell.ContextActions>
                        <MenuItem Text="Delete"
                                  Clicked="OnDeleteBtn_Clicked"
                                  CommandParameter="{Binding .}"
                                  IsDestructive="True" />
                    </ViewCell.ContextActions>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>