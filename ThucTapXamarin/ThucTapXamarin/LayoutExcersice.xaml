<?xml version="1.0" encoding="utf-8" ?>
<ContentPage BackgroundColor="#127ac7"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ThucTapXamarin.LayoutExcersice">
    <StackLayout VerticalOptions="Center"
                 Spacing="20">
        <Label Text="Wellcome to Xamarin"
               FontSize="30"
               TextColor="White"
               HorizontalTextAlignment="Center"/>
        <Label Text="Cross-platform apps made easy"
               TextColor="White"
               FontSize="18"
               HorizontalTextAlignment="Center"/>
        <Button Text="Login"
                TextColor="White"
                BackgroundColor="#1dabf0"
                Clicked="OnBtnLoginClicked"/>
        <Button Text="Register"
                TextColor="White"
                BackgroundColor="#1dabf0"
                Clicked="OnBtnRegisterClicked"/>
    </StackLayout>
</ContentPage>